<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/light_Gray">
  <TextView
    android:id="@+id/ResultTextView"
    android:layout_marginTop="25sp"
    android:layout_width="330sp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="RESULT"
    android:textSize="35sp"
    android:textAlignment="center"
    android:layout_marginBottom="30sp"
    android:background="@color/White">
  </TextView>
  <GridLayout
    android:layout_marginBottom="0sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="4">
    <Button
      android:tag="fact"
      android:layout_row="0"
      android:layout_column="0"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="!"
      android:textSize="25sp"
      android:onClick="factorial"/>
    <Button
      android:tag="pow"
      android:layout_row="0"
      android:layout_column="1"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="^"
      android:textSize="25sp"
      android:onClick="power"/>
    <Button
      android:tag="binary2decimal"
      android:layout_row="0"
      android:layout_column="2"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="B2D"
      android:textSize="25sp"
      android:onClick="binary2decimal"/>
    <Button
      android:tag="decimal2binary"
      android:layout_row="0"
      android:layout_column="3"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="D2B"
      android:textSize="25sp"
      android:onClick="decimal2binary"/>

    <Button
      android:tag="1"
      android:layout_row="1"
      android:layout_column="0"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="1"
      android:textSize="25sp"
      android:onClick="handleButton"/>
    <Button
      android:tag="2"
      android:layout_row="1"
      android:layout_column="1"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="2"
      android:textSize="25sp"
      android:onClick="handleButton"/>
    <Button
      android:tag="3"
      android:layout_row="1"
      android:layout_column="2"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="3"
      android:textSize="25sp"
      android:onClick="handleButton"/>
    <Button
      android:tag="divide"
      android:layout_row="1"
      android:layout_column="3"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="/"
      android:textSize="25sp"
      android:onClick="divide"/>
    <Button
      android:tag="4"
      android:layout_row="2"
      android:layout_column="0"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="4"
      android:textSize="25sp"
      android:onClick="handleButton"/>
    <Button
      android:tag="5"
      android:layout_row="2"
      android:layout_column="1"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="5"
      android:textSize="25sp"
      android:onClick="handleButton"/>
    <Button
      android:tag="6"
      android:layout_row="2"
      android:layout_column="2"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="6"
      android:textSize="25sp"
      android:onClick="handleButton"/>
    <Button
      android:tag="minus"
      android:layout_row="2"
      android:layout_column="3"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="-"
      android:textSize="25sp"
      android:onClick="minus"/>
    <Button
      android:tag="7"
      android:layout_row="3"
      android:layout_column="0"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="7"
      android:textSize="25sp"
      android:onClick="handleButton"/>
    <Button
      android:tag="8"
      android:layout_row="3"
      android:layout_column="1"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="8"
      android:textSize="25sp"
      android:onClick="handleButton"/>
    <Button
      android:tag="9"
      android:layout_row="3"
      android:layout_column="2"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="9"
      android:textSize="25sp"
      android:onClick="handleButton"/>
    <Button
      android:tag="plus"
      android:layout_row="3"
      android:layout_column="3"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="+"
      android:textSize="25sp"
      android:onClick="sum"/>
    <Button
      android:tag="erase"
      android:layout_row="4"
      android:layout_column="0"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="c"
      android:textSize="25sp"
      android:onClick="reset"/>
    <Button
      android:tag="0"
      android:layout_row="4"
      android:layout_column="1"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="0"
      android:textSize="25sp"
      android:onClick="handleButton"/>
    <Button
      android:tag="float"
      android:layout_row="4"
      android:layout_column="2"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="."
      android:textSize="25sp"
      android:onClick="makeFloat"/>
    <Button
      android:tag="equal"
      android:layout_row="4"
      android:layout_column="3"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="="
      android:textSize="25sp"
      android:onClick="equal"/>
    <Button
      android:tag="times"
      android:layout_row="5"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="2sp"
      android:text="*"
      android:textSize="25sp"
      android:onClick="times"/>
  </GridLayout>
</LinearLayout>
