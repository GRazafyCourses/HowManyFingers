<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/colorPrimaryDark">
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Type a number of fingers you think I am showing"
    android:textAlignment="center"
    android:textSize="25sp"
    android:textStyle="bold"
    android:layout_marginTop="25sp">

  </TextView>
  <EditText
    android:id="@+id/write_to_edit_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Type number of fingers"
    android:textSize="20sp"
    android:textAlignment="center"
    android:gravity="center_horizontal"
    android:onClick="writeToEditText">
  </EditText>
  <Button android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20sp"
          android:text="PLAY"
          android:textStyle="bold"
          android:textSize="25sp"
          android:textColor="@color/White"
          android:onClick="showNumber"
          android:background="@color/colorPrimary"/>
  <TextView
    android:id="@+id/ResultEdt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text=""
    android:textAlignment="center"
    android:textSize="25sp"
    android:textStyle="bold"
    android:layout_marginTop="25sp">
  </TextView>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
      android:id="@+id/firstDice"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
    <ImageView
      android:id="@+id/secondDice"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
  </LinearLayout>
</LinearLayout>
